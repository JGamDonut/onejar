{
  "name": "workinonit-stack",
  "version": "0.0.0",
  "description": "OneJar.Red, a playground, a portfolio, an experience",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && node ./scripts/dev.js",
    "watch-index": "./node_modules/.bin/onchange \"src/index.njk\" -- npm run build-html",
    "watch-client": "snowpack dev --config scripts/snowpack.config.cjs",
    "watch-public": "./node_modules/.bin/onchange \"src/public/**/*\" -- npm run build-public",
    "watch-sass": "./node_modules/.bin/sass --watch src/sass:./public/css",
    "build": "npm run clean-build && shx mkdir -p \"public\" && npm run build-html && npm run build-public && npm run build-images",
    "clean-build": "./node_modules/.bin/shx rm -rf ./public",
    "build-html": "node ./scripts/build-html.js",
    "build-styleguide-html": "node ./scripts/build-styleguide-html.js",
    "build-public": "node ./scripts/build-public.js",
    "build-images": "node ./scripts/image-compression.js",
    "build-client": "snowpack build --config scripts/snowpack.config.cjs",
    "build-sass": "sass src/sass/main.scss:public/css/main.css --style=compressed",
    "build-prod": "npm run build && npm run build-sass && npm run build-client",
    "lint": "npm run lint-client && npm run lint-sass",
    "lint-client": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "lint-sass": "./node_modules/.bin/stylelint \"src/sass/**/*.scss\" \"src/**/*.riot\" --fix --config \"src/.stylelintrc\"",
    "lint-client-fail": "./node_modules/.bin/eslint \"src/**/*.{js,ts}\" --quiet",
    "lint-sass-fail": "./node_modules/.bin/stylelint \"src/sass/**/*.scss\" \"src/**/*.riot\" --config \"src/.stylelintrc\""
  },
  "keywords": [
    "workinonit",
    "onejar",
    "dev",
    "playground",
    "portfolio",
    "experience"
  ],
  "author": "Jarred Gambrell",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@snowpack/plugin-sass": "^1.4.0",
    "@snowpack/plugin-webpack": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^8.2.0",
    "@types/node": "^16.11.10",
    "@types/snowpack-env": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@webcomponents/template": "^1.5.0",
    "concurrently": "^6.4.0",
    "core-js": "^3.19.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "gsap": "^3.8.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "nunjucks": "^3.2.3",
    "onchange": "^7.1.0",
    "pre-commit": "^1.2.2",
    "sass": "^1.43.4",
    "shelljs": "^0.8.5",
    "shx": "^0.3.3",
    "snowpack": "^3.8.8",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14"
  },
  "pre-commit": {
    "run": [
      "lint-client-fail",
      "lint-sass-fail"
    ],
    "silent": true
  },
  "type": "module"
}
